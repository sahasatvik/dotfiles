! URxvt configuration

URxvt.font:                     xft:Fira Code Nerd Font:style=Regular:size=12, xft:Symbola:style=Regular:size=12
URxvt.boldFont:                 xft:Fira Code Nerd Font:style=Bold:size=12
URxvt.italicFont:               xft:Fira Mono:style=Italic:size=12
URxvt.boldItalicFont:           xft:Fira Mono:style=Bold Italic:size=12
URxvt.cursorBlink:              true
URxvt.internalBorder:           10

URxvt.keysym.Control-Up:        \033[1;5A
URxvt.keysym.Control-Down:      \033[1;5B
URxvt.keysym.Control-Left:      \033[1;5D
URxvt.keysym.Control-Right:     \033[1;5C
URxvt.keysym.Shift-Up:          command:\033]720;1\007
URxvt.keysym.Shift-Down:        command:\033]721;1\007

URxvt.scrollBar:                false
URxvt.scrollBar_right:          false
URxvt.scrollTtyOutput:          false
URxvt.scrollWithBuffer:         true
URxvt.scrollTtyKeypress:        true

URxvt.perl-ext-common:          default,matcher,resize-font,bell-command
URxvt.url-launcher:             /usr/bin/xdg-open
URxvt.matcher.button:           1
URxvt.bell-command:             paplay $HOME/.sounds/pop.wav

