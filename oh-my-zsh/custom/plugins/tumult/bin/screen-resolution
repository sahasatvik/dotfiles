# Print screen resolution on macOS
if [ $(uname -a | grep -ci Darwin) != 1 ]; then
  echo "Sorry, this script only works on macOS"
  exit 1
fi

system_profiler SPDisplaysDataType |  awk -F ':' '/Resolution/ {print $2}'
