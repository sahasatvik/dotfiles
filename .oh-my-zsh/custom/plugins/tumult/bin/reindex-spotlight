#!/bin/sh

####################################################################################################
#                                       Remove Problem Files                                       #
####################################################################################################

mdutil -i off -a /
defaults write /Library/Preferences/com.apple.desktopservices DSDontWriteNetworkStores true
mdutil -i on -a /
mdutil -Ea /

####################################################################################################
#                                     Restart System UI Server                                     #
####################################################################################################

killall SystemUIServer